@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Профіль", "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Profile" })
    </li>
    <li>
        @Html.ActionLink("Вийти", "Logout", "Home")
    </li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Реєстрація", "Register", "Home")</li>
        <li>@Html.ActionLink("Вхід", "Login", "Home")</li>
    </ul>
}
